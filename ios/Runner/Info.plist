<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Expense Tracker</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>expense_tracker</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!-- =============================================== -->
	<!-- CAMERA PERMISSION (for scanning receipts) -->
	<!-- =============================================== -->
	<key>NSCameraUsageDescription</key>
	<string>We need access to your camera to scan receipts and add expenses.</string>

	<!-- =============================================== -->
	<!-- PHOTO LIBRARY PERMISSION (optional) -->
	<!-- =============================================== -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>We need access to your photo library to attach receipt images to expenses.</string>
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>We need permission to save receipt images to your photo library.</string>

	<!-- =============================================== -->
	<!-- BIOMETRIC AUTHENTICATION (Face ID / Touch ID) -->
	<!-- =============================================== -->
	<key>NSFaceIDUsageDescription</key>
	<string>We use Face ID to securely authenticate and protect your financial data.</string>

	<!-- =============================================== -->
	<!-- NOTIFICATIONS -->
	<!-- =============================================== -->
	<key>UIBackgroundModes</key>
	<array>
		<string>remote-notification</string>
	</array>

	<!-- =============================================== -->
	<!-- CONTACTS (if you plan to add contact-based features) -->
	<!-- =============================================== -->
	<!-- Uncomment if needed:
	<key>NSContactsUsageDescription</key>
	<string>We need access to your contacts to help you split expenses with friends.</string>
	-->

	<!-- =============================================== -->
	<!-- LOCATION (if you plan to add location-based features) -->
	<!-- =============================================== -->
	<!-- Uncomment if needed:
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>We use your location to tag expenses with where they occurred.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>We use your location to automatically detect and track expenses at specific locations.</string>
	-->

	<!-- =============================================== -->
	<!-- CALENDARS (if you plan to add calendar integration) -->
	<!-- =============================================== -->
	<!-- Uncomment if needed:
	<key>NSCalendarsUsageDescription</key>
	<string>We need access to your calendar to set reminders for recurring expenses.</string>
	<key>NSRemindersUsageDescription</key>
	<string>We need access to reminders to help you track bill payment deadlines.</string>
	-->

	<!-- =============================================== -->
	<!-- BLUETOOTH (if you plan to add Bluetooth features) -->
	<!-- =============================================== -->
	<!-- Uncomment if needed:
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>We use Bluetooth to connect with external devices for expense tracking.</string>
	<key>NSBluetoothPeripheralUsageDescription</key>
	<string>We use Bluetooth to communicate with nearby devices.</string>
	-->

	<!-- =============================================== -->
	<!-- PRIVACY FEATURES -->
	<!-- =============================================== -->
	<!-- Prevent screenshots/screen recording (optional) -->
	<!-- Note: This is handled programmatically in Flutter, but you can add additional security here -->

	<!-- =============================================== -->
	<!-- APP CAPABILITIES -->
	<!-- =============================================== -->
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>

	<!-- =============================================== -->
	<!-- STATUS BAR CONFIGURATION -->
	<!-- =============================================== -->
	<key>UIStatusBarHidden</key>
	<false/>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<true/>

	<!-- =============================================== -->
	<!-- PREVENT BACKUP OF SENSITIVE DATA -->
	<!-- =============================================== -->
	<key>ITSAppUsesNonExemptEncryption</key>
	<false/>
</dict>
</plist>